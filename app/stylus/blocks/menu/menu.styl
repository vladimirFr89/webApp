.menu
  &__items
    list-style none
    padding 0
    margin 0
    &::after
      content ""
      display table
      clear both

  &__item
    float left
    margin-right 40px

    &_text
      text-decoration none

    &_facebook-theme
      margin-right 43px
      font-size 20px
      font-weight 400
      line-height 36.12px
      color #ffffff

    &_twitter-theme
      margin-right 38px
      font-size 22px
      font-weight 400
      line-height 36.12px
      color #ffffff

    &_icon-theme
      padding-top 5px

    &:last-child
      margin-right 0

  &__item-layer
    position relative

  &__icon-super
    position absolute
    top -10px
    right -16px

    &_theme-text
      color #363636
      font-family Montserrat, sans-serif;
      font-size 11px
      font-weight 600
      vertical-align super

    &_theme-sq-yellow
      width 21px
      height 15px
      padding-top 1px
      text-align center
      background-color #ffe400