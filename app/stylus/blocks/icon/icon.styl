.icon
  padding 0
  border none

  &--blue-bg
    background-color #2297d8

  &--theme-circle
    width 71px
    height 71px
    margin-bottom 14px
    background url("../img/play-circle.png") no-repeat center

  &--theme-circle-bg
    position relative
    width 61px
    height 61px
    margin auto
    -moz-border-radius 30px
    -webkit-border-radius 30px
    border-radius 30px
    background-color #2297d8

  &--theme-play-arrow
    position absolute
    top 17px
    left 22px
    width 22px
    height 28px
    background url("../img/play-arrow.png") no-repeat center

  &--theme-pdf
    height 71px
    margin-bottom 16px
    background url("../img/icon-pdf.png") no-repeat center

  &--theme-contact-circle
    height 54px
    background url("../img/contact-circle.png") no-repeat center

  &--theme-contact-circle-bg
    position relative
    top 5px
    width 44px
    height 44px
    margin auto
    -moz-border-radius 22px
    -webkit-border-radius 22px
    border-radius 22px
    background-color #2297d8


  &--theme-play-arrow-down
    position relative
    top -8px
    height 28px
    margin-bottom 5px
    background url("../img/play-arrow-down.png") no-repeat center

  &--person-avatar
    height 60px
    margin-bottom 17px
    background url("../img/avatar.png") no-repeat center

  &--person-rate4
    height 14px
    margin-top 10px
    background url("../img/rate4.png") no-repeat center

  &--person-rate1none
    height 14px
    background url("../img/rate1none.png") no-repeat center

  &--person-rate5
    height 14px
    margin-top 10px
    background url("../img/rate5.png") no-repeat center

  &--blue-square
    position relative
    height 83px
    width 83px
    margin-bottom 35px
    text-align center
    background url("../img/rectangle-blue.png") no-repeat center

  &--blue-square-bg
    position relative
    top 8px
    left 8px
    width 67px
    height 67px
    background-color #ffffff

  &--ligthinig-blue
    position absolute
    top 14px
    left 22px
    height 38px
    width 21px
    background url("../img/lightning-blue.png") no-repeat center

  &--raindrop
    position absolute
    top 18px
    left 23px
    height 32px
    width 21px
    background url("../img/raindrop.png") no-repeat center

  &--setting-tool-blue
    position absolute
    top 17px
    left 17px
    height 34px
    width 34px
    background url("../img/setting-tool-blue.png") no-repeat center

  &--light-bulb
    position absolute
    top 17px
    left 22px
    height 34px
    width 23px
    background url("../img/light-bulb.png") no-repeat center

  &--icon-stars
    height 73px
    margin-bottom 12px
    background url("../img/icon-star.png") no-repeat center

  &--arrow-next-inside
    border 5px solid transparent
    border-left 8px solid #ffffff

  &--arrow-prev-inside
    border 5px solid transparent
    border-right 8px solid #ffffff
