.main
  min-height 500px
  &--theme-white-gr
    background-color #f5f5f5

  //Элемент для размещения контента
  &__content
    position relative
    width 1172px
    min-height 450px

    &--theme-grey
      background-color #d6d6d6

    &--theme-transparent
      background-color transparent

  &__content-flex-wrap
    display flex
    flex-wrap wrap

  &__content-inner
    margin-left auto
    margin-right auto

  &__column-main
    width 879px
    //Для размещения блоков в линию без пропусков
    &--theme-inline
      font-size 0

  &__column-aside
    width 293px

  &__column-inner-left
    margin-right 293px

  &__column-inner-right
    float right

  &__double-unit
    display inline-block
    vertical-align top