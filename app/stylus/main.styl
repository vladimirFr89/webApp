body
  margin 0
/*Блок для размещения шапки сайта*/
.header
  min-height 348px
  background-color #36383b

  &--theme-home-page
    min-height 240px

  // Элемент шапки для фона шапки
  &__bg
    min-height 348px
    width 50%
    //Цвет фона для элемента шапки
    &_theme-gray
      background-color #d6d6d6

    &--theme-dark-grey
      background-color #36383b

    &--height-home-page
      min-height 826px

    &--part-right
      margin-left 50%

  //Элемент шапки для контента
  &__content
    width 1172px

  //Элемент шапки для фона контента в шапке(фон под лого, меню, и т.д)
  &__content-bg
    width 879px
    min-height 348px
    &_theme-red
      background-color #ff0000
    &_theme-gray
      background-color #d6d6d6

    &--height-home-page
      min-height 826px

  //Элемент шапки для содержимого(лого, меню, кнопки и т.д)
  &__container
    &_theme-green
      background-color #008000

/*примесь для фона шапки*/
.header__bg-inner
  position absolute

/*примесь для контента шапки сайта*/
.header__content-inner
  margin-left auto
  margin-right auto
  position relative

/*примесь для фона контента шапки сайта*/
.header__content-bg-inner
  position absolute

/*примесь для содержимого контента шапки*/
.header__content-container-inner
  position relative
  top 29px

/*Блок для контента*/
.content
  width 800px
  min-height 50px
  &_theme-grey
    background-color grey
    opacity 0.5


/*примесь для меню в контенте шапки*/
.content__menu
  position absolute
  top 25px
  right 0

/*примесь для названия страницы*/
.content__caption
  margin-top 84px

