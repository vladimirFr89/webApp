doctype html
html
    head
        meta(charset="utf-8")
        title My First web app
        link(rel='stylesheet' href='font-awesome-4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet' href='css/main.css')
    body
        // Шапка сайта
        header.header
            // Фон для шапки сайта
            div.header__bg.header__bg-inner.header__bg_theme-gray
            // Контент для шапки
            div.header__content.header__content-inner
                //Фон в контенте шапки
                div.header__content-bg.header__content-bg-inner.header__content-bg_theme-gray
                //Контейнер в контенте шапки для содержимого типа лого, меню и т.д
                div.header__container.header__content-container-inner
                    // Блок для Лого
                    div.logo
                        a.logo__text.logo__text_middle-right-place(href="#") fdn
                    //Блок для меню
                    div.menu.content__menu
                        ul.menu__items
                            li.menu__item.menu__item_facebook-theme
                                i(class="fa fa-facebook", aria-hidden="true")
                            li.menu__item.menu__item_twitter-theme
                                i(class="fa fa-twitter", aria-hidden="true")
                            li.menu__item
                                img(src="../img/forma-1.png", alt="корзина")
                            li.menu__item
                                img(src="../img/menu.png", alt="меню")
                    // Название страницы
                    div.caption.content__caption
                        span.caption__text our services
        //Тело сайта
        div.main.main_theme-white-gr
            // Контент для тела сайта
            div.main__content.main__content-inner.main__content_theme-grey
                //Колонка для всего остального
                aside.main__column-aside.main__column-inner-right
                    div.unit.unit_theme-blue
