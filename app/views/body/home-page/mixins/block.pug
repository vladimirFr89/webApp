-
    var blocks = [
        {
            blockGeometry:["unit--horizontal-double-unit"],
            title:"building the world around us",
            titleStyles: [
                "unit__title--big-bold",
                "unit__title--big-width",
                "unit__title--black-text"
            ],
            hrLine: true,
            article:"Still other clients have reserved for capital improvement projects and will work directly with our Design and Engineering team.",
            articleStyles: ["unit__article--black-text"],
            bgColor:"unit--theme-yellow",
            buttons:[
                {
                    caption: "Read more",
                    btnStyles: [
                        "button--theme-unit-btn",
                        "button--black-bg",
                        "button--text-white"
                    ],
                    locationStyles: ["unit__fix-btn-read-more-wrap"]
                }
            ]
        },

        {
            title:"",
            hrLine: false,
            article:"",
            buttons:[]
        },

        {
            type: "arrowButtons",
            btnTop:{
                btnStyles:["button--theme-arrow", "button--arrow-next"],
                bgImage: "icon--arrow-next-inside",
                locationStyles: ["unit__button-arrow-wrap"]
            },
            infoMainText:"01",
            mainTextStyles:[
                "unit__info--big-regular",
                "unit__info--letter-spacing4",
                "unit__info--black-text"
            ],
            infoSupText:"/03",
            supTextStyles:[
                "unit__info--supper",
                "unit__info--medium-regular",
                "unit__info--letter-spacing2",
                "unit__info--black-text"
            ],
            btnBottom:{
                btnStyles:["button--theme-arrow", "button--arrow-prev"],
                bgImage:"icon--arrow-prev-inside",
                locationStyles: ["unit__button-arrow-wrap"]
            },
            bgColor:"unit--theme-info"
        }
    ];

mixin unit(obj)
    div.unit&attributes({"class":[obj.blockGeometry, obj.bgColor]})
        if obj.title.length
            h2.unit__title&attributes({"class":[obj.titleStyles]})= obj.title

        if obj.hrLine
            hr.unit__horizontal.unit__horizontal--black-solid

        if obj.article.length
            p.unit__article&attributes({"class":[obj.articleStyles]})= obj.article

        if obj.buttons.length
            for btn in obj.buttons
                if btn.locationStyles.length
                    div&attributes({"class": btn.locationStyles})
                        input.button&attributes({"class": btn.btnStyles})(type="button", value= btn.caption)
                else
                    input.button&attributes({"class": btn.btnStyles})(type="button", value= btn.caption)

mixin unitArrowButtons(obj)
    div.unit&attributes({"class": obj.bgColor})
        div&attributes({"class": obj.btnTop.locationStyles})
            button.button&attributes({"class": obj.btnTop.btnStyles})
                div.icon&attributes({"class": obj.btnTop.bgImage})

        div.unit__info-wrap
            span.unit__info&attributes({"class": obj.mainTextStyles})= obj.infoMainText
            span.unit__info&attributes({"class": obj.supTextStyles})= obj.infoSupText

        div&attributes({"class": obj.btnBottom.locationStyles})
            button.button&attributes({"class": obj.btnBottom.btnStyles})
                div.icon&attributes({"class": obj.btnBottom.bgImage})

for block in blocks
    case block.type
        when "arrowButtons"
            +unitArrowButtons(block)

        default
            +unit(block)