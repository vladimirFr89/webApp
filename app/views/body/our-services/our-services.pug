div.main.main--theme-white-gr
    // Контент для тела сайта
    div.main__content.main__content--theme-grey.main__content-inner
        //Колонка для всего остального
        aside.main__column-aside.main__column-inner-right
            -
                var blocks = [
                    {
                        title: "popular posts",
                        dateInfo: "12 february, 2015",
                        subTitle: "Project Design and Engineering Services",
                        commentsInfo: "23 comments"
                    },
                    {
                        title: "Download price",
                        icon: "icon--theme-pdf",
                        type: "bigIcon"
                    },
                    {
                        title: "subscribe",
                        inputValue: "E-mail",
                        btnCaption: "sign up",
                        type: "subscribe"
                    },
                    {
                        title: "Work with us",
                        icon: "icon--icon-stars",
                        type: "bigIcon"
                    }
                ];

            mixin blockNews(obj)
                div.unit.unit--theme-blue
                    h2.unit__title.unit__title--big-bold.unit__title--med-width.unit__title--letter-spacing1.unit__title--white-text= obj.title
                    p.unit__info.unit__info--norm-medium.unit__info--white-blue-text.unit__info--fix-for-popular-posts= obj.dateInfo
                    h3.unit__title.unit__title--med-regular.unit__title--white-text.unit__title--fix-for-popular-posts= obj.subTitle
                    p.unit__info.unit__info--norm-medium.unit__info--white-blue-text= obj.commentsInfo
                    div.unit__horiz-inline-wrap.unit__horiz-bottom-wrap
                        hr.unit__horizontal.unit__horizontal--white-solid.unit__horizontal--width-small.unit__horizontal--inline
                        hr.unit__horizontal.unit__horizontal--white-solid.unit__horizontal--width-small.unit__horizontal--opasity02.unit__horizontal--inline
                        hr.unit__horizontal.unit__horizontal--white-solid.unit__horizontal--width-small.unit__horizontal--opasity02.unit__horizontal--inline

            mixin blockIcon(obj)
                div.unit.unit--theme-yellow
                    div.unit__download-price-wrap
                        div(class="icon " + obj.icon)
                        span.unit__info.unit__info--small-regular.unit__info--letter-spacing03.unit__info--black-text.unit__info--uppercase= obj.title

            mixin blockSubscribe(obj)
                div.unit.unit--theme-blue
                    h2.unit__title.unit__title--big-bold.unit__title--med-width.unit__title--letter-spacing1.unit__title--white-text= obj.title
                    hr.unit__horizontal.unit__horizontal--white-solid
                    div.unit__inner-form-aside
                        form.form
                            input.form__input.form__input--theme-unit-search-white(type="text", name="email", value= obj.inputValue)
                            input.form__submit.form__submit--theme-link-submit.form__submit--small-text.form__submit--white-text(type="submit", value= obj.btnCaption)

            for block in blocks
                if (block.type === "bigIcon")
                    +blockIcon(block)

                else if (block.type === "subscribe")
                    +blockSubscribe(block)

                else
                    +blockNews(block)

        //Колонка для главного содержимого сайта
        main.main__column-main.main__column-main--theme-inline.main__column-inner-left
            -
                var blocks = [
                    {
                        title: "General Contracting",
                        article: "This allows the Design and Engineering team to originate drawings, specifications, structural calculations, details and scopes of work that deliver exactly what the client had intended to achieve.",
                        image:"",
                        postIdx: "1",
                        arrowDir: "unit__arrow--down"
                    },
                    {
                        title: "Project design and engineering",
                        article: "Through Stage-Gate, Design and Engineering methodology, DMCS ensure client-partners realize clearly defined project objective to achieve intended results.",
                        image:"",
                        postIdx: "2",
                        arrowDir: "unit__arrow--up"
                    },
                    {
                        title: "Capital Improvements",
                        article: "This allows the Design and Engineering team to originate drawings, specifications, structural calculations, details and scopes of work that deliver exactly what the client had intended to achieve.",
                        image:"",
                        postIdx: "3",
                        arrowDir: "unit__arrow--down"
                    },
                    {
                        title: "Construction",
                        article: "This allows the Design and Engineering team to originate drawings, specifications, structural calculations, details and scopes of work that deliver exactly what the client had intended to achieve.",
                        image:"",
                        postIdx: "4",
                        arrowDir: "unit__arrow--down"
                    },
                    {
                        title: "Expert Witness",
                        article: "Through Stage-Gate, Design and Engineering methodology, DMCS ensure client-partners realize clearly defined project objective to achieve intended results.",
                        image:"",
                        postIdx: "5",
                        arrowDir: "unit__arrow--up"
                    },
                    {
                        title: "Procurement",
                        article: "This allows the Design and Engineering team to originate drawings, specifications, structural calculations, details and scopes of work that deliver exactly what the client had intended to achieve.",
                        image:"",
                        postIdx: "6",
                        arrowDir: "unit__arrow--down"
                    }

                ];

            mixin doubleBlockArrowDown(obj)
                div.main__double-unit
                    div.unit.unit--bg-layer-unit
                        div.unit.unit--theme-info
                            h3.unit__title.unit__title--med-bold.unit__title--med-width-h3.unit__title--black-text= obj.title
                            hr.unit__horizontal.unit__horizontal--black-solid
                            p.unit__article.unit__article--gray-text= obj.article
                        div(class="unit__arrow " + obj.arrowDir)
                    div.unit.unit--theme-foto
                        div.unit__number.unit__number--theme-yellow-bg.unit__number--centered-text
                            span.unit__number.unit__number--text= obj.postIdx

            mixin doubleBlockArrowUp(obj)
                div.main__double-unit
                    div.unit.unit--theme-foto
                        div.unit__number.unit__number--theme-yellow-bg.unit__number--centered-text
                            span.unit__number.unit__number--text= obj.postIdx
                    div.unit.unit--bg-layer-unit
                        div.unit.unit--theme-info
                            h3.unit__title.unit__title--med-bold.unit__title--med-width-h3.unit__title--black-text= obj.title
                            hr.unit__horizontal.unit__horizontal--black-solid
                            p.unit__article.unit__article--gray-text= obj.article
                        div(class="unit__arrow " + obj.arrowDir)

            for dBlock in blocks
                if (dBlock.arrowDir === "unit__arrow--down")
                    +doubleBlockArrowDown(dBlock)
                else
                    +doubleBlockArrowUp(dBlock)