header.header.header--theme-home-page
    // Фон для шапки сайта
    div.header__bg.header__bg-inner.header__bg_theme-gray.header__bg--height-home-page
        img(src="../img/header-home-920px.jpg", width="920px", height="826px", alt="head banner")
    div.header__bg.header__bg-inner.header__bg--theme-dark-grey.header__bg--height-home-page.header__bg--part-right
    // Контент для шапки
    div.header__content.header__content-inner
        //Фон в контенте шапки
        div.header__content-bg.header__content-bg-inner.header__content-bg__theme-transparent.header__content-bg--height-home-page
        //Контейнер в контенте шапки для содержимого типа лого, меню и т.д
        div.header__container.header__content-container-inner
            // Блок для Лого
            div.logo.logo--theme-home-page
                a.logo__text.logo__text--text-black.logo__text-inner(href="#") fdn
            //Блок для меню
            div.menu.content__menu
                ul.menu__items
                    li.menu__item.menu__item_facebook-theme
                        i(class="fa fa-facebook", aria-hidden="true")
                    li.menu__item.menu__item_twitter-theme
                        i(class="fa fa-twitter", aria-hidden="true")
                    li.menu__item.menu__item_icon-theme
                        div.menu__item-layer
                            img(src="../img/forma-1.png", alt="корзина")
                            div.menu__icon-super.menu__icon-super_theme-sq-yellow
                                span.menu__icon-super_theme-text 99
                    li.menu__item.menu__item_icon-theme
                        img(src="../img/menu.png", alt="меню")